extends ../layout
block content
        section.main.clearfix
            each  item in blog
                .work
                    a(href='inner/#{item.id}')
                        .blogCaption
                            img.sevenB(src='#{item.titleImg}', alt='#{item.title}' title="#{item.title}")
                            .work_title
                                h3.post-item-title
                                    a(href='inner/#{item.id}') #{item.title}
                                .post-item-inner
                                    .post-meta
                                        span.user
                                            i.icon user
                                            | by:
                                            a.green(href='#') Tezml
                                        span.time
                                            i.icon time
                                            | #{item.createTime}
                                    p #{item.outline}
